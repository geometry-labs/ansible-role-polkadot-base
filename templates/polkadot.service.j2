[Unit]
Description=Polkadot Dummy Node

[Service]
User=polkadot
Group=polkadot
ExecStart=/usr/local/bin/polkadot \
         --name polkadot-dummy \
         --base-path=/data \
         --validator \
         --rpc-methods=Unsafe \
         --chain={{ chain }} \
         --rpc-port {{ api_rpc_port }} \
         --database rocksdb \
         --wasm-execution=Compiled

[Install]
WantedBy=multi-user.target